/* 样式初始化 */
button {
  padding: 0;
  margin: 0;
  border: none;
}
.container {
  margin: 0;
  padding: 0;
}

.box {

}
.header {
  width: 100%;
  height: 40px;
  background: red;
  border-top:8px solid red;
}
.formBox {
  width: 90%;
  height: 80%;
  margin: 0 auto;
  border-radius: 30rpx;
  display: flex; 
  flex-direction: row;
  align-items: center;
  background: white;
}
.inp {
  width: 92%;
  height: 80%;
  padding-left: 20px;
  box-sizing: border-box;
  font-size: 14px;
}
.reset {
  width: 20px;
  height: 20px;
  border-radius: 50%; 
  font-size: 12px;
  text-align: center;  
  line-height: 20px; 
  background: gainsboro;
}

/*  搜索结果列表页面  */
.resultList {
  width: 100%;
  height: 70px;
  /* box-sizing: border-box; */
  border-bottom: 1px solid; 
  border-image:  linear-gradient(90deg, white, gainsboro, white) 1 1;
  display: flex;
  flex-direction: row;
} 
.resultImgBox {
  width: 70px;
  height: 70px;
  border: 1px solid red;
  box-sizing: border-box;
}
.resultImg {
  width:100%;
  height: 100%;
}